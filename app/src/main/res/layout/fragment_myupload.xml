<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.chenwei.plus.Resource.Myupload_fragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ScrollView
        android:id="@+id/upload_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/d"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffff"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/day_title_btn"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="今天"
                        android:textColor="#555555"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:id="@+id/day_btn"
                        style="@style/tab_menu_item"
                        android:background="@color/bg_white"
                        android:layout_height="25dp"
                        android:layout_width="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="12dp"
                        android:drawableTop="@drawable/down_and_rigth"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@id/d"
                    android:background="@color/div_white" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/week"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/w"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffff"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/week_title_btn"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="一周内"
                        android:textColor="#555555"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:id="@+id/week_btn"
                        style="@style/tab_menu_item"
                        android:background="@color/bg_white"
                        android:layout_height="25dp"
                        android:layout_width="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="12dp"
                        android:drawableTop="@drawable/down_and_rigth"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@id/w"
                    android:background="@color/div_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/month"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/m"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffff"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/month_title_btn"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="一个月内"
                        android:textColor="#555555"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:id="@+id/month_btn"
                        style="@style/tab_menu_item"
                        android:background="@color/bg_white"
                        android:layout_height="25dp"
                        android:layout_width="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="12dp"
                        android:drawableTop="@drawable/down_and_rigth"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@id/m"
                    android:background="@color/div_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/month_ago"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ma"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffff"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/month_ago_title_btn"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="一个月前"
                        android:textColor="#555555"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:id="@+id/month_ago_btn"
                        style="@style/tab_menu_item"
                        android:background="@color/bg_white"
                        android:layout_height="25dp"
                        android:layout_width="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="12dp"
                        android:drawableTop="@drawable/down_and_rigth"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@id/ma"
                    android:background="@color/div_white" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
