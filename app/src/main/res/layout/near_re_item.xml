<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_white"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:background="#ffff">
            <ImageView
                android:id="@+id/near_head_view"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:background="@mipmap/person_normal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/near_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我是你浩哥" />
                <TextView
                    android:id="@+id/near_resource_name"
                    android:layout_marginLeft="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="高等数学第三章ppt"
                    android:textColor="@color/bg_black"
                    android:textSize="20dp"
                    android:singleLine="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/near_price"
                        android:layout_marginLeft="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分：3"/>
                    <TextView
                        android:id="@+id/near_evaluate_text"
                        android:layout_marginLeft="27dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评价：5" />
                    <TextView
                        android:id="@+id/near_distance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="距离：5"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="0dp">
                <ImageView
                    android:id="@+id/near_resource_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/not_found"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>