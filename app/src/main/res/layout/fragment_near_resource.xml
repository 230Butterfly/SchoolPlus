<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chenwei.plus.Near.Near_resource_fragment">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

             <LinearLayout
                 android:layout_marginTop="5dp"
                 android:layout_marginBottom="6dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <LinearLayout
                     android:id="@+id/distance_btn"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:orientation="horizontal">
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="10dp"
                         android:layout_weight="1"
                         android:text="距离"
                         android:textSize="16dp"
                         android:textColor="@color/bg_black"
                         android:gravity="end"/>
                     <ImageView
                         android:id="@+id/distance_down"
                         android:layout_marginTop="4dp"
                         android:layout_width="12dp"
                         android:layout_height="14dp"
                         android:background="@drawable/down_unselected"/>
                     <ImageView
                         android:id="@+id/distance_up"
                         android:layout_marginTop="4dp"
                         android:layout_marginRight="18dp"
                         android:layout_width="12dp"
                         android:layout_height="14dp"
                         android:background="@drawable/up_unselected"/>

                 </LinearLayout>

                 <View
                     android:layout_width="0.2px"
                     android:layout_height="match_parent"
                     android:paddingVertical="4dp"
                     android:background="@color/div_white" />

                 <LinearLayout
                     android:id="@+id/heat_btn"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:orientation="horizontal">
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="10dp"
                         android:layout_weight="1"
                         android:text="热度"
                         android:textSize="16dp"
                         android:textColor="@color/bg_black"
                         android:gravity="end"/>
                     <ImageView
                         android:id="@+id/heat_down"
                         android:layout_marginTop="4dp"
                         android:layout_width="12dp"
                         android:layout_height="14dp"
                         android:background="@drawable/down_unselected"/>
                     <ImageView
                         android:id="@+id/heat_up"
                         android:layout_marginTop="4dp"
                         android:layout_marginRight="18dp"
                         android:layout_width="12dp"
                         android:layout_height="14dp"
                         android:background="@drawable/up_unselected"/>

                 </LinearLayout>
                 <View
                     android:layout_width="2px"
                     android:layout_height="match_parent"
                     android:paddingVertical="4dp"
                     android:background="@color/div_white" />
                 <LinearLayout
                     android:id="@+id/screen_btn"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:orientation="horizontal">
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="8dp"
                         android:layout_weight="1"
                         android:text="筛选"
                         android:textSize="16dp"
                         android:textColor="@color/bg_black"
                         android:gravity="end"/>
                     <ImageView
                         android:id="@+id/screen_open"
                         android:layout_marginTop="3dp"
                         android:layout_width="17dp"
                         android:layout_height="17dp"
                         android:background="@drawable/up_close"/>
                     <ImageView
                         android:layout_marginTop="4dp"
                         android:layout_marginRight="18dp"
                         android:layout_width="12dp"
                         android:layout_height="15dp"
                         />



                 </LinearLayout>

             </LinearLayout>
             <View
                 android:layout_width="match_parent"
                 android:layout_height="2px"
                 android:layout_alignParentBottom="true"
                 android:background="@color/div_white" />
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <android.support.v7.widget.RecyclerView
                     android:id="@+id/near_re_list"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                 </android.support.v7.widget.RecyclerView>
             </LinearLayout>

         </LinearLayout>
     </RelativeLayout>

</FrameLayout>
