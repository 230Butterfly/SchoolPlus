<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Person.ChangeInfo"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/down_title_resource"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <RelativeLayout
                android:id="@+id/evaluate_down_back_btn"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/back" />

            </RelativeLayout>

            <TextView
                android:layout_width="179dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="修改头像"
                android:textSize="20dp" />

            <RelativeLayout
                android:id="@+id/evaluate_down_message_btn"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_picture"
        android:src="@drawable/resource"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_margin="10dip"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#EEE9E9"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:text="修改头像："
        android:textColor="#000000"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp">
        <!--android:textSize="16sp"-->
        <!--android:textColor="#ffffff"-->
        <!--android:background="#006000"-->
        <ImageButton
            android:id="@+id/btn_take_camera"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/camera"
            android:layout_margin="10dip"
            android:scaleType="fitXY"
            />
        <ImageButton
            android:id="@+id/btn_take_photo"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/photo"
            android:layout_margin="10dip"
            android:scaleType="fitXY"
            />
    </LinearLayout>
</LinearLayout>
