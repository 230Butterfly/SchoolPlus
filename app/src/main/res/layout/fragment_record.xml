<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chenwei.plus.Resource.Record_fragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ScrollView
        android:id="@+id/record_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/record_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/record_d"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffff"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/record_day_title_btn"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="请求记录"
                        android:textColor="#555555"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:id="@+id/record_day_btn"
                        style="@style/tab_menu_item"
                        android:background="@color/bg_white"
                        android:layout_height="25dp"
                        android:layout_width="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="12dp"
                        android:drawableTop="@drawable/down_and_rigth"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@id/d"
                    android:background="@color/div_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/record_week"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/record_w"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffff"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/record_week_title_btn"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="回应记录"
                        android:textColor="#555555"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:id="@+id/record_week_btn"
                        style="@style/tab_menu_item"
                        android:background="@color/bg_white"
                        android:layout_height="25dp"
                        android:layout_width="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="12dp"
                        android:drawableTop="@drawable/down_and_rigth"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@id/w"
                    android:background="@color/div_white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
